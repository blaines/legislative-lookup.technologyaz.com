<% title "Legislators" %>

<table>
  <tr>
    <th>Chamber</th>
    <th>Session</th>
    <th>First Name</th>
    <th>Middle Name</th>
    <th>Last Name</th>
    <th>Suffix</th>
    <th>Party</th>
    <th>District</th>
    <th>Phone Number</th>
    <th>Fax Number</th>
    <th>Email Address</th>
  </tr>
  <% for legislator in @legislators %>
    <tr>
      <td><%=h legislator.chamber %></td>
      <td><%=h legislator.session %></td>
      <td><%=h legislator.first_name %></td>
      <td><%=h legislator.middle_name %></td>
      <td><%=h legislator.last_name %></td>
      <td><%=h legislator.suffix %></td>
      <td><%=h legislator.party %></td>
      <td><%=h legislator.district %></td>
      <td><%=h legislator.phone_number %></td>
      <td><%=h legislator.fax_number %></td>
      <td><%=h legislator.email_address %></td>
      <td><%= link_to "Show", legislator %></td>
      <td><%= link_to "Edit", edit_legislator_path(legislator) %></td>
      <td><%= link_to "Destroy", legislator, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Legislator", new_legislator_path %></p>
